{% extends 'Back/layout.html.twig' %}

{% block content %}
    <div class="userloginForm">
    <h1 class="text-center mt-5">Merci de vous connecter</h1>
    <form class="formBack" action="/back/check" method="post">
<div class="form-group mt-5">
    <label for="exampleInputEmail1">Identifiant</label>
    <input name="username" type="text" class="form-control"  aria-describedby="emailHelp" placeholder="Sofiane">
    <small id="emailHelp" class="form-text text-muted">Attention à toujours protéger vos identifiants.</small>
</div>
<div class="form-group">
    <label for="exampleInputPassword1">Mot de passe</label>
    <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="">
</div>

<button type="submit" class="btn btn-primary">Connexion</button>
</form>
    </div>

{% endblock %}