{% extends 'layout.html.twig' %}

{% block content %}

    <div class="mt-5 container col-6">
        <legend class="mb-4">Récapitulatif</legend>

        <p>Depart: {{ departureStation }}</p>
        <p>Arrivée: {{ arrivalStation }}</p>
        <p>Capacité: {{ vehicle.capacity }}</p>
        <p>Date: {{ user.date }}  </p>
        <p>heure : {{ user.heure }}</p>
        <p>email : {{ user.email }}</p>
        <p>prix total : 275e</p>


    </div>


    <form class="container payment col-6 mt-5" method="post" action="/booking/final">
        <fieldset>
            <legend>Paiement</legend>
            <div class="form-group">
                <label class="control-label" for="card-holder-name">Nom du titulaire</label>
                <div>
                    <input type="text" class="form-control"
                           id="name-on-card" placeholder="{{ user.firstname ~ ' ' ~ user.lastname }}">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="card-number">Numéro de carte</label>
                <div>
                    <input type="text" class="form-control"
                           id="card-number" placeholder="Numéro de carte">
                    <br/>
                    <div><img class="pull-right"
                              src="https://s3.amazonaws.com/hiresnetwork/imgs/cc.png"
                              style="max-width: 250px; padding-bottom: 20px;">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="expiry-month">Date d'expiration</label>
                    <div>
                        <div class="col-6 p-0">
                            <div>
                                <select class="form-control"
                                        id="card-exp-month">
                                    <option>Mois</option>
                                    <option value="01">Janvier</option>
                                    <option value="02">Février</option>
                                    <option value="03">Mars</option>
                                    <option value="04">Avril</option>
                                    <option value="05">Mai</option>
                                    <option value="06">Juin</option>
                                    <option value="07">Juillet</option>
                                    <option value="08">Août</option>
                                    <option value="09">Septembre</option>
                                    <option value="10">Octobre</option>
                                    <option value="11">Novembre</option>
                                    <option value="12">Décembre</option>
                                </select>
                            </div>
                            <div>
                                <select class="form-control"
                                        id="card-exp-year">
                                    <option value="2019">2019</option>
                                    <option value="2020">2020</option>
                                    <option value="2021">2021</option>
                                    <option value="2022">2022</option>
                                    <option value="2023">2023</option>
                                    <option value="2024">2024</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="cvv">CVC</label>
                    <div class="col-6 p-0">
                        <input type="text" class="form-control"
                               id="card-cvc" placeholder="Code de sécurité">
                        <div class="mt-2"><a class="btn btn-primary" style="color:white"
                                             onclick="alert('Transaction validée')" href="/Booking/final">Payer</a>
                        </div>
                    </div>
                </div>

            </div>
        </fieldset>
    </form>

{% endblock %}


