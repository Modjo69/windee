{% extends 'layout.html.twig' %}


{% block title %}Réservation{% endblock %}



{% block content %}
    {% if error is defined  %}
    <div class="alert alert-danger text-center">
    {{ error }}
    </div>
    {% endif %}
    <h2 class="booking-title">Réservation</h2>

    <div class="form booking-form">
        <form action="/booking/recap" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="departureStation">Station de départ</label>
                    <select name="depart" id="departureStation" class="form-control" required>
                        <option selected>Sélectionnez...</option>
                        {% for station in tabDetails.stations %}
                            <option value="{{ station.id }}">{{ station.station_name }}</option>

                        {% endfor %}
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="arrivalStation">Station d'arrivée</label>
                    <select id="arrivalStation" class="form-control" name="arrivee" required>
                        <option selected>Sélectionnez...</option>
                        {% for station in tabDetails.stations %}
                            <option value="{{ station.id }}">{{ station.station_name }}</option>

                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">

                    <label for="inputDate">Capacité Vehicule</label>
                    <select id="VehiculeCapacite" class="form-control" required name="capacite">

                        <option selected>Sélectionnez...</option>
                        {% for vehicle in tabDetails.vehicles %}
                            <option value="{{ vehicle.id }}">{{ vehicle.capacity }}</option>

                        {% endfor %}
                    </select>
                </div>
                <div class="form-group col-md-5">
                    <label for="inputDate">Date</label>
                    <input type="date" class="form-control" id="inputFirstname" value="{{ 'now'|date('d/m/Y') }}" placeholder="Date" name="date" required>
                </div>
                <div class="form-group col-md-3">
                    <label for="inputHeure">Heure</label>
                    <input type="time" class="form-control" id="inputLastname" placeholder="Heure" value="07:00" required name="hour" required>
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label for="inputFirstname">Prénom</label>
                    <input type="text" class="form-control" id="inputFirstname" placeholder="Prénom" name="firstname" required maxlength="45" pattern="[A-Za-z' -]+">
                </div>
                <div class="form-group col-md-5">
                    <label for="inputLastname">Nom</label>
                    <input type="text" class="form-control" id="inputLastname" placeholder="Nom"  name="lastname" required maxlength="45" pattern="[A-Za-z' -]+">
                </div>
                <div class="form-group col-md-2">
                    <label for="inputAge">Age</label>
                    <input type="number" class="form-control" id="inputAge" min="16" max="99" value="16" required>
                </div>
            </div>


            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control" id="inputEmail" placeholder="E-mail" name="email" required maxlength="45">
            </div>

            <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" class="form-control" id="inputPassword" placeholder="*****" name="password" required maxlength="20" minlength="5">
            </div>

            <div class="form-group">
                <label for="inputAddress">Adresse</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="17 rue Delandine" name="address" required maxlength="45" minlength="5">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">Ville</label>
                    <input type="text" class="form-control" id="inputCity" required maxlength="20" pattern="[A-Za-z' -]+">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputState">Pays</label>
                    <select id="inputState" class="form-control" name="country" required >
                        <option selected>France</option>
                        <option>Autre</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputZip">Code postal</label>
                    <input type="number" class="form-control" id="inputZip" required maxlength="5" >
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck" required>
                    <label class="form-check-label" for="gridCheck">
                        J'accepte les <a href="#">CGV</a>
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Réserver!</button>
        </form>
    </div>
{% endblock %}


