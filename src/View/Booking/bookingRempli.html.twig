{% extends 'layout.html.twig' %}


{% block title %}Réservation{% endblock %}



{% block content %}
    <h2>Réservation</h2>
    <div class="form">
        <form action="/booking/recapitulatif" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="departureStation">Station de départ</label>
                    <input name='depart' type="text" class="form-control" id="inputFirstname" readonly value="{{ arrayStation.stationD.station_name }} {{ arrayStation.depart }}">
                </div>
                <div class="form-group col-md-6">
                    <label for="arrivalStation">Station d'arrivée</label>
                    <input name="arrivee" type="text" class="form-control" id="inputFirstname" readonly value="{{ arrayStation.stationA.station_name }} {{ arrayStation.arrivee }}">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputDate">Capacité Vehicule Souhaité</label>
                    <select id="VehiculeCapacite" class="form-control" required name="capacite">
                        <option selected>Sélectionnez...</option>
                        {% for vehicule in arrayStation.vehicule %}
                            <option>{{ vehicule.capacite }}</option>

                        {% endfor %}
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputDate">Date</label>
                    <input type="date" class="form-control" id="inputFirstname" value="2019-11-08" placeholder="Date" name="date" required>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputHeure">Heure</label>
                    <input type="time" class="form-control" id="inputLastname" placeholder="Heure" value="07:00" required name="heure" required>
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label for="inputFirstname">Prénom</label>
                    <input type="text" class="form-control" id="inputFirstname" placeholder="Prénom" name="prenom" required>
                </div>
                <div class="form-group col-md-5">
                    <label for="inputLastname">Nom</label>
                    <input type="text" class="form-control" id="inputLastname" placeholder="Nom"  name="nom" required>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputAge">Age</label>
                    <input type="number" class="form-control" id="inputAge" min="16" max="99" value="16" required>
                </div>
            </div>


            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control" id="inputEmail" placeholder="E-mail" name="mail" required>
            </div>

            <div class="form-group">
                <label for="inputAddress">Adresse</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="17 rue Delandine" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">Ville</label>
                    <input type="text" class="form-control" id="inputCity" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputState">Pays</label>
                    <select id="inputState" class="form-control">
                        <option selected>France</option>
                        <option>Autre</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputZip">Code postal</label>
                    <input type="text" class="form-control" id="inputZip" required>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck" required>
                    <label class="form-check-label" for="gridCheck">
                        J'accepte les <a href="#">CGV</a>
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Réserver!</button>
        </form>
    </div>
{% endblock %}

{% block javascript %}{% endblock %}
